// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String  @unique
  password String
}

model Entry {
  id       String         @id @default(auto()) @map("_id") @db.ObjectId
  type     EntryType
  status   EntryStatus
  text     String
  date     DateTime
  dateTime EntryDateTime
  children SubEntry[]

  @@index(date)
}

type SubEntry {
  type     EntryType
  status   EntryStatus
  text     String
}

type EntryDateTime {
  year   Int
  month  Int
  day    Int?
  time   EntryTime?
}

type EntryTime {
  hour   Int
  minute Int
}

enum EntryType {
  task
  note
  event
}

enum EntryStatus {
  open
  done
  cancelled
  migrated
}